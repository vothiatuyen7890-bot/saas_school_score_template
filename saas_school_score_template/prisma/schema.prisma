generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user")
  students  Student[]
  logs      ActivityLog[]
}

model Student {
  id        Int      @id @default(autoincrement())
  name      String
  class     String
  score     Float
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model ActivityLog {
  id        Int      @id @default(autoincrement())
  action    String
  targetId  Int?
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}